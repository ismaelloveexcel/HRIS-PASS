# Environment Variables Template
#
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Hyperbeam API Configuration
# Get your API key from https://hyperbeam.com
HYPERBEAM_API_KEY=your_hyperbeam_api_key_here

# World API Configuration
WORLD_API_URL=http://localhost:3000/api
WORLD_SYNC_INTERVAL=5000

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600000

# Feature Flags
ENABLE_GARDEN=true
ENABLE_CINEMA=true
ENABLE_WORLD_SYNC=true
